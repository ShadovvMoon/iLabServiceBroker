extends layout
block content
	div.container
		div.row
			div.span12
				form(method='post', action='/server', style="margin:0 0 0px")
					legend iLab Example Client
					p Select an experiment from the list below.
					
					div.form-actions(style="margin-bottom:0px")
						select(name='Experiments', id="experiment", style="margin-bottom:0px;")
							option(value='RadioactivityLab')
								p RadioactivityLab
						| &nbsp;
						input.btn.btn-primary(value='Run Experiment', type='submit')
						| &nbsp;
						input.btn.btn-primary(value='Show Configuration', type='submit')
		hr
		div.row
			div.span12
				div.progress.progress-striped.active.hide
					div.bar(style='width: 10%')
		div.row
			div.span12
				div.alert.hide
					button.close(type='button', data-dismiss='alert') x
					span
						strong.message
					span
						normal.text