<%- include title.ejs %>
Service Broker - General Settings
<%- include header.ejs %>

<h4>General Settings</h4>
<hr>
   
<% 
var vendor = database.valueForKey("settings", "vendor-name"); 
var guid   = database.valueForKey("settings", "vendor-guid"); 
%>

<form role="form" action="/general" method="post">
	<div class="form-group">
		<label>Name</label>
		<input class="form-control" name="name" value="<%= vendor %>">
	</div>
	<div class="form-group">
		<label>GUID</label>
		<input class="form-control" name="guid" value="<%= guid %>">
	</div>
	<div align="right">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>

<%- include footer.ejs %>